{
  "info": {
    "title": "Book Example",
    "version": "1.0.0"
  },
  "openapi": "3.0.3",
  "paths": {
    "/books/": {
      "get": {
        "operationId": "searchBooks",
        "tags": [
          "Book"
        ],
        "summary": "Search Books",
        "description": "Search books by keyword",
        "security": [
          {
            "jwt": []
          }
        ],
        "parameters": [
          {
            "description": "Search keyword",
            "name": "q",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "allowReserved": true,
            "allowEmptyValue": true
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Book"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/books/{id}": {
      "patch": {
        "operationId": "updateBook",
        "tags": [
          "Book"
        ],
        "summary": "Update Book",
        "security": [
          {
            "jwt": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 1
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "description": "Book Title",
                    "type": "string"
                  },
                  "tags": {
                    "description": "Tag List",
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/Tag"
                    }
                  },
                  "publishedDate": {
                    "format": "date",
                    "description": "Published Date",
                    "type": "string",
                    "example": "2023-03-30"
                  }
                },
                "additionalProperties": false,
                "required": [
                  "tags",
                  "title"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Book Schema",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Book"
                }
              }
            }
          }
        }
      },
      "delete": {
        "operationId": "deleteBook",
        "tags": [
          "Book"
        ],
        "summary": "Delete Book",
        "security": [
          {
            "jwt": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 1
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Empty Response Body"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Book": {
        "description": "Book Schema",
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Book ID",
            "example": 1
          },
          "title": {
            "description": "Book Title",
            "type": "string"
          },
          "tags": {
            "description": "Tag List",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Tag"
            }
          },
          "publishedDate": {
            "format": "date",
            "description": "Published Date",
            "type": "string",
            "example": "2023-03-30"
          }
        },
        "additionalProperties": false,
        "required": [
          "id",
          "tags",
          "title"
        ]
      },
      "Tag": {
        "description": "Tag Schema",
        "enum": [
          "Adventure",
          "Fantasy",
          "Romance"
        ],
        "type": "string"
      },
      "Omit_Book__id__": {
        "type": "object",
        "properties": {
          "title": {
            "description": "Book Title",
            "type": "string"
          },
          "tags": {
            "description": "Tag List",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Tag"
            }
          },
          "publishedDate": {
            "format": "date",
            "description": "Published Date",
            "type": "string",
            "example": "2023-03-30"
          }
        },
        "additionalProperties": false,
        "required": [
          "tags",
          "title"
        ]
      }
    },
    "securitySchemes": {
      "jwt": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}